<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <title>All Users</title>
</head>
<body class="bg-gray-100 min-h-screen">
  <header class="bg-blue-600 text-white p-4">
    <div class="container mx-auto flex justify-between items-center">
      <h1 class="text-lg font-semibold">User Management System</h1>
    </div>
  </header>
  
  <main class="container mx-auto p-4">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold text-gray-800">All Users</h2>
      <!-- Back to Dashboard Button -->
      <a href="/dashboard" class="bg-blue-600 text-white px-6 py-3 rounded-lg shadow-md hover:bg-blue-500 transition-all">
        Back to Dashboard
      </a>
    </div>

    <table class="w-full bg-white rounded-lg shadow-md">
      <thead>
        <tr class="bg-gray-200 text-gray-600 uppercase text-m leading-normal">
          <th class="py-3 px-6 text-left">Name</th>
          <th class="py-3 px-6 text-left">Email</th>
          <th class="py-3 px-6 text-left">Phone</th>
          <th class="py-3 px-6 text-left">Status</th>
        </tr>
      </thead>
      <tbody class="text-black-600 text-sm">
        <% users.forEach(user => { %>
          <tr class="border-b border-gray-200 hover:bg-gray-100">
            <td class="py-3 px-6 text-left"><%= user.name %></td>
            <td class="py-3 px-6 text-left"><%= user.email %></td>
            <td class="py-3 px-6 text-left"><%= user.phone %></td>
            <td class="py-3 px-6 text-left"><%= user.isActive ? 'Active' : 'Deactivated' %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </main>
</body>
</html>
